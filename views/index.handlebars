<div class="index-container">
    <div class="burger-logo">
        <img src="./images/burger.gif">
        <h3>Eat-Da-Burger</h3>
    </div>

    <div class="display-burger-container">

        <div class="grid-x">

            <div class="cell small-8 to-be-devour-container">
                {{#each burgersData}} {{#unless devoured}}
                <form action="/update?_method=PUT" method="POST">
                    <div class="grid-container">
                        <div class="grid-x grid-padding-x">
                            <div class="medium-6 cell">
                                <label>{{burger_name}}</label>
                            </div>
                            <div class="medium-6 cell">
                                <button type="submit" class="button" name="burgerID" value="{{id}}">Devour it!</button>
                            </div>
                        </div>
                    </div>
                </form>

                {{/unless}} {{/each}}
            </div>

            <div class="cell small-4 devoured-container">
                {{#each burgersData}} {{#if devoured}}
                <span class="label success">{{burger_name}} 2</span>
                {{/if}} {{/each}}
            </div>

        </div>
    </div>

    <form action="/create" method="POST">
        <div class="input-group">
            <input class="input-group-field" type="text" name="burgerName">
            <div class="input-group-button">
                <input type="submit" class="button" value="Submit">
            </div>
        </div>
    </form>

</div>